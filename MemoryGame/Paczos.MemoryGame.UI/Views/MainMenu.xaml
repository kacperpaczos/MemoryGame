<Page x:Class="Paczos.MemoryGame.UI.Views.MainMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Paczos.MemoryGame.UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="LightGray">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="0,10"/>
                </Style>
            </StackPanel.Resources>
            <TextBlock Text="Memory Game" FontSize="36" FontWeight="Bold" Margin="0,0,0,20" />
            <Button x:Name="PlayGameButton" Content="Graj" Click="PlayGame_Click" Width="200" Height="50" IsEnabled="False"/>
            <Button Content="Użytkownicy" Click="Users_Click" Width="200" Height="50" />
            <Button Content="Image Manager" Click="ImageManager_Click" Width="200" Height="50" />
            <Button Content="Wyjście" Click="Exit_Click" Width="200" Height="50" />
        </StackPanel>
    </Grid>
</Page>